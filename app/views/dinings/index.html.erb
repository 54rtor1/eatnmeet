<div class="mb-4 d-flex align-items-left justify-content-center">

  <div class="containe text-center p-5">
    <h1 class="py-3">Explore dining experiences</h1>
    <%= render 'searchbar' %>
  </div>


  <div class="container">
    <div class="row">
    <%= render 'card', dining: @dining %>
  <br>
  <hr>
  <div class="host-banner jumbotron jumbotron-fluid p-5 my-5">
    <div class="container">
      <div class="row">
        <div class="col">
          <h2>Host your own experience</h2>
          <p>Create an experience and get to know people from all over the world in your own place!</p>
        </div>
        <div class="col">
        <%= link_to "Create dining", new_dining_path, class: "button-dark order-2" %>
        </div>
      </div>
    </div>
    </div>
  </div>
 <hr>
  <div class="py-3">
    <div style="width: 100%; height: 500px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>

</div>
