<% @dinings.each do |dining| %>
<div class="col-sm-4">
  <div class="card-trip mb-3">
    <% if  dining.photo.key.nil? %>
      <div class="card-image">
       <%= image_tag "defaultimgcard.jpg"%>
     </div>
    <% else %>
      <div class="card-image">
       <%= cl_image_tag dining.photo.key%>
      </div>
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%= link_to dining.name, dining_path(dining.id) %></h2>
        <p><%= dining.comment %>
        <%= link_to dining_path(dining.id), method: :delete, data: { confirm: "Delete #{dining.name}?" } do %>
            <i class="fa-solid fa-trash"></i></p>
            <% end %>
      </div>
      <h2 class="card-trip-pricing">Â£99.99</h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
</div>
<% end %>
