<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
      <div class="title text-center">
        <h3>Create a new dining</h3>
        </div>
        <%= simple_form_for @dining do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :date %>
          <%= f.input :time %>
          <%= f.input :category %>
          <%= f.input :price %>
          <%= f.input :comment %>
          <%= f.input :max_guests %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'button-orange p-2' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
